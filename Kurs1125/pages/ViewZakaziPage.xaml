<Page x:Class="Kurs1125.pages.ViewZakaziPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Kurs1125.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewZakaziPage">

    <Grid Background="#FFEEC798">
        <DataGrid ItemsSource="{Binding Items}" Margin="286,10,0,0" Grid.Row="2" Background="#FFECD4AB" BorderBrush="Black" Foreground="Black"  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Время получения" Width="110"/>
                <DataGridTextColumn Header="Время назначения"/>
                <DataGridTextColumn Header="Место отправления"/>
                <DataGridTextColumn Header="Место Назначения"/>
                <DataGridTextColumn Header="Статус"/>
            </DataGrid.Columns>
        </DataGrid>




        <Button Height="20" VerticalAlignment="Center" Margin="0,0,698,0" Grid.Row="1" Content="Заказы"/>
        <Button Height="20" VerticalAlignment="Center" Margin="107,0,591,0" Grid.Row="1" Content="Удалить заказ"/>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="29*" />
            <RowDefinition Height="421*"/>
        </Grid.RowDefinitions>



    </Grid>
</Page>
